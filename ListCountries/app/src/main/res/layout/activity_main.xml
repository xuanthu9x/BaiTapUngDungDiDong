<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtSearch"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Nhập tên nước"
        android:textSize="25sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/btnTim"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Tìm"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txtSearch"
        android:layout_marginLeft="5dp"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSearch"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageView
        android:id="@+id/flag"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginTop="50dp"
         />

    <TextView
        android:id="@+id/txtQuocGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quốc Gia"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/flag"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/txtQuocGia"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/flag"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
         />

    <TextView
        android:id="@+id/txtDanSo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dân số"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/txtQuocGia"
        app:layout_constraintTop_toBottomOf="@+id/txtQuocGia"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/txtSoDan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/txtDanSo"
        app:layout_constraintLeft_toLeftOf="@+id/txtName"
        android:textSize="25sp"
         />
    <TextView
        android:id="@+id/txtDienTich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diện tích"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/txtDanSo"
        app:layout_constraintTop_toBottomOf="@+id/txtDanSo"
        android:layout_marginTop="30dp"
         />
    <TextView
        android:id="@+id/txtArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/txtDienTich"
        app:layout_constraintLeft_toLeftOf="@+id/txtSoDan"
        android:textSize="25sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>